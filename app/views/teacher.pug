extends layout
block content
    h1 Teacher Profile Page for: #{teacher.Name}
    p The ID for the teacher is: #{teacher.T_ID}
    h2 Skills
    table(border=1)
        tr
            th Skill Name
            th Skill Type
        tr 
            for skills in teacher.skills
                tr  
                    td #{skills.skillName}
                    td #{skills.skillType}
    
    h2 Booking
    table(border=1)
        tr
            th Day Of Week
            th Slot
            th Duration
        tr
        for booking in teacher.booking
            tr 
                td #{booking.DayOfWeek}
                td #{booking.Slot}
                td #{booking.Duration}

                
                